<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/you_are_n_a_years_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_years_txt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="440dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#E91E63" app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ip_box"/>
    <TextView
            android:text="@string/you_are_n_a_hours_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_hours_txt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="432dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#E91E63" app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/age_days_txt"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/you_are_n_a_days_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_days_txt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="452dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#E91E63" app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/age_months_txt"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ip_box"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/dd_mm_yyyy" android:autofillHints=""
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/you_are_n_a_months_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_months_txt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="440dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#E91E63" app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/age_years_txt"
            app:layout_constraintVertical_bias="0.081"/>
    <Button
            android:text="@string/calculate_your_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculate_butt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/age_hours_txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>